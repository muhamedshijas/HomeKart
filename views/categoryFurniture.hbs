<div class="navbar row text-white">
  <div class="col-md-8">
    <div class="row product-section  ms-4">
      <div class="col-md-4 logo">HomeKart</div>
      <div class="col-md-6 adminpanel">
        </div>
    </div>
  </div>
  <div class="col-md-4 mt-0">
    <div class="row logo">
      <div class="col-md-3 adminlogo"> <a href="/wishlist"><i class="ri-heart-3-line"></i></a></div>
      <div class="col-md-3 adminlogo"> <a href="/cart"><i class="ri-shopping-cart-2-line"></a></i></div>
       <div class="col-md-3 adminlogo"> <a href="/userProfile"><i class="ri-user-line"></i></a></div>
      <div class="col-md-3 logout"><a href="/logout"><i class="ri-logout-box-r-line"></i></a></div>
    </div>
  </div>
</div>

<div class="category-head container d-flex align-items-center justify-content-center mt-5"><h3>{{name}}</h3></div>

<div class="container">
    {{#each products}}
    
<div class="categoryProCards row">
    <div class="col-md-3">
        <img src="{{this.product.url}}" alt="">
    </div>
    <div class="col-md-7">
        <h3>{{this.name}}</h3>
        <div class="wish d-flex w-100 justify-content-between"><p>{{this.category}}</p>  <div class="heart"><i class="ri-heart-line"></i></div></div>
        <h5>{{this.price}}</h5>
         <a class="btn btn-success cBtn w-25" href="/addtoCart/{{this._id}}">Add to Cart</a>
    </div>
</div>
{{/each}}
</div>