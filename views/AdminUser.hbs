        <th scope="col">Email</th>
        <th scope="col">Phone No</th>
        <th scope="col">opertaions</th>
      </tr>
    </thead>
    <tbody class="text-center">
      <tr>
        {{#each userData}}
        <th scope="row">{{@index}}</th>
        <td>{{this.name}}</td>
        <td>{{this.email}}</td>
        <td>{{this.PhoneNo}}</td>
        <td>
          {{#if this.staff}}
          <a href="/admin/unBan/{{this._id}}" class="btn btn-danger"> Remove From staff</a>
          {{else if this.admin}}
          <h6 class="text-success">Admin</h6>
          {{else}}
          <a href="/admin/banuser/{{this._id}}" class="btn btn-warning"> Add To staff</a>
          {{/if}}
        </td>
      </tr>
      {{/each}}
    </tbody>
  </table>
