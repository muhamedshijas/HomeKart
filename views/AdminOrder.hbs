<div class="container">
    <div class="orderCards">
    <div class="cards">
        <h4>Total Orders</h4>
        <h1>{{totalcount}}</h1>
    </div>
    <div class="cards">
        <h4>Pending</h4>
        <h1>{{pendingCount}}</h1>
        </div>
    <div class="cards">
        <h4>Completed</h4>
        <h1>{{deliveredCount}}</h1>
    </div>
    <div class="cards">
        <h4>Cancelled</h4>
        <h1>{{cancelCount}}</h1>
    </div>
    </div>
    <div class="row container product-btn mt-5">
        <div class="col-md-3 product-btn">
           
    <form class="d-flex" role="search " action="/admin/searchOrder" method="post">
      <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search" name="name">
      <button class="btn btn-success" type="submit">Search</button>
    </form>
        </div>
    </div>

    <table class="table mt-2" >
  <thead class="bg-dark text-white">
    <tr>
      <th scope="col">Product</th>
      <th scope="col">user</th>
      <th scope="col">City</th>
       <th scope="col">Phone</th>
        <th scope="col">Total Price</th>
      <th scope="col">Status</th>
      <th scope="col">Action</th>
    </tr>
  </thead>
  <tbody>
     {{#each orders}}

    <tr>
      <td>{{this.orderItems}}</td>
      <td>{{this.user}}</td>
      <td>{{this.city}}</td>
      <td>{{this.phone}}</td>
      <td>{{this.totalPrice}}</td>
      <td>{{this.status}}</td>
      <td><a href="/admin/changeStatus/{{this._id}}" class="btn btn-dark">Change Status</a> </td>    
      </tr>
{{/each}}
  </tbody>
</table>
 </div>
  

